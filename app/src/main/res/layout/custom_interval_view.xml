<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/view_interval_field_minutes"
        style="@style/DefaultEditText"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:fontFamily="@font/roboto_condensed_bold"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|number"
        android:maxLength="2"
        android:textSize="@dimen/text_24sp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/view_interval_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/view_interval_field_minutes"
        android:layout_toEndOf="@id/view_interval_field_minutes"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/dialog_interval_setting_divider"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_24sp" />

    <EditText
        android:id="@+id/view_interval_field_seconds"
        style="@style/DefaultEditText"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/view_interval_divider"
        android:digits="0123456789"
        android:fontFamily="@font/roboto_condensed_bold"
        android:importantForAutofill="no"
        android:inputType="textNoSuggestions|number"
        android:maxLength="2"
        android:textSize="@dimen/text_24sp"
        tools:ignore="LabelFor" />

</RelativeLayout>